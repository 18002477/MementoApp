<Window x:Class="miniTexteditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:miniTexteditor"
        mc:Ignorable="d"
        Title="Text editor pro" Height="279" Width="371">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Text="Text editor pro" FontSize="30" TextWrapping="Wrap" VerticalAlignment="Top"/>

        <TextBox x:Name="tb_text" HorizontalAlignment="Left" Margin="10,50,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="193" Height="149"/>
        <Button Content="◀" HorizontalAlignment="Left" Margin="137,204,0,0" VerticalAlignment="Top" Width="25"/>
        <Button x:Name="btn_save" Content="Save" HorizontalAlignment="Left" Margin="56,204,0,0" VerticalAlignment="Top" Width="38" Click="Save_Click" RenderTransformOrigin="-2.342,0.837"/>
        <Button Content="▶" HorizontalAlignment="Left" Margin="175,204,0,0" VerticalAlignment="Top" Width="28"/>
        <ListBox x:Name="lstBox_memento" Margin="223,10,15,23" MouseDoubleClick="lstBox_memento_MouseDoubleClick"/>

    </Grid>

</Window>
